<div class="user-show container">
  <div class="row">
    <div class="user-show--image">
      <% if user.image %>
       <%= image_tag "/images/#{user.image}",size:"200x200" , class:"image-icon" %>
      <% end %>
    </div>
  </div>

  <div class="user-show--info">
    <div class="row user-show--name">
      <h2><%= display_name(user) %></h2>
    </div>
    <div class="row user-show--info-items">
      <p>
        <%= display_address(user) %>
        <span>|</span>
        <%= display_gender(user) %>
        <span>|</span>
        <%= display_age(user) %>
      </p>
    </div>
  </div>

  <!-- フォローボタン -->
  <!-- 他の場所にも設置するので後で別コンポーネントに。 -->
  <div class="follow-btn">
    <%= form_with url:relationships_path, model:user.followings do |f| %>
      <div><%= hidden_field_tag :followed_id, user.id %></div>
      <%= f.submit "フォローする", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="unfollow-btn">
    <%= form_with url:relationship_path(user.id), method: :delete,
                  model:user.followings do |f| %>
      <%= f.submit "フォローを解除する", class: "btn" %>
    <% end %>
  </div>

  <div class="row user-show--introduction">
    <p><%= user.introduction %></p>
  </div>

  <div class="row user-show--family">
    <% user.ferrets.each do |ferret| %>
      <%= link_to ferret_path(ferret) do %>
        <%= image_tag "/images/#{ferret.image}", size:"120x120", class:"image-icon" %>
        <p><%= display_name(ferret) %></p>
      <% end %>
    <% end %>
  </div>

  <div class="row user-show--post">
    <p>TO BE CREATED</p>
  </div>
</div>
