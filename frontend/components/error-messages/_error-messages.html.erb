<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= object.errors.count %>件のエラーがあります。
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li class="each-error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
