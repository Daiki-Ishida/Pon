<% if message.sender == current_user %>
  <% possessive = "my" %>
<% else %>
  <% possessive = "your" %>
<% end %>

<div class="message <%= possessive %>-message">
  <div class="message--icon">
    <%= link_to user_path(message.sender) do %>
      <% if message.sender.image.attached? %>
        <%= image_tag message.sender.image, size:"50x50", class:"image-icon #{possessive}-icon" %>
      <% else %>
        <%= image_tag "/images/no_image.jpg", size:"50x50", class:"image-icon #{possessive}-icon" %>
      <% end %>
    <% end %>
  </div>
  <div class="message--content">
    <%= link_to user_path(message.sender) do %>
      <p class="message--name"><%= message.sender.name %></p>
    <% end %>
    <small class="text-muted"><%= display_time(message.created_at) %></small>
    <p class="message--content"><%= simple_format(text_url_to_link(h(message.content)), {}, sanitize: false) %></p>
  </div>
</div>
