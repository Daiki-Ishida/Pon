<div class="comment">
    <div class="commnet--head">
      <div class="commnet--user-icon">
        <%=
        render partial: "components/img-icon/img-icon",
               locals: {
                 path: comment.user.image,
                 size: "50x50"
               }
        %>
      </div>
      <div class="comment--info">
        <div class="commnet--user-name">
          <%= display_name(comment.user) %>
        </div>
        <div class="comment--time">
          <small class="text-muted">
            <%= comment.updated_at %>
          </small>
        </div>
      </div>
      <% if current_user?(comment.user) %>
        <div class="comment--config">
          <%= render "components/edit-btn/edit-btn", path: edit_comment_path(comment)  %>
          <%= link_to "削除", comment_path(comment), method: :delete %>
        </div>
      <% end %>
    </div>
    <div class="comment--content">
      <p><%= comment.content %></p>
    </div>
</div>
