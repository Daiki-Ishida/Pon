<div class="my-rooms col-md-8 offset-md-2">
  <% rooms.each do |room| %>
    <div class="my-rooms--room">
      <div class="my-rooms--opponent-info">
        <%= link_to user_path(room.opponent(current_user)) do %>
          <div class="my-rooms--opponent--icon">
            <% if room.opponent(current_user).image.attached? %>
              <%= image_tag room.opponent(current_user).image, size: "80x80", class:"image-icon" %>
            <% else %>
              <%= image_tag "/images/no_image.jpg", size:"80x80", class:"image-icon" %>
            <% end %>
          </div>
          <div class="my-rooms--opponent-name">
            <%= room.opponent(current_user).name %>
          </div>
        <% end %>
      </div>
      <div class="my-rooms--content">
        <%= link_to room_path(room) do %>
          <%= room.messages.last.content %>
          <small class="text-muted"><%= " (#{time_ago_in_words(room.messages.last.created_at)}å‰)" %></small>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
