  <div class="row">
    <div class="show--image">
      <%=
      render partial: "components/img-icon/img-icon",
             locals: {path: object.image, size: "200x200"}
      %>
    </div>
  </div>

  <div class="show--info">
    <div class="row show--name">
      <h2><%= display_name(object) %></h2>
    </div>
    <div class="row show--info-items">
      <p>
        <%= display_address(object) %>
        <span>|</span>
        <%= display_gender(object) %>
        <span>|</span>
        <%= display_age(object) %>
      </p>
    </div>
  </div>

  <div class="row show--introduction">
    <p><%= object.introduction %></p>
  </div>
