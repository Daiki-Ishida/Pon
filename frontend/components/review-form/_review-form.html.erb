<div class="review-form">
  <div class="row">
    <div class="col-md-8  offset-md-2">
      <p class="warning"><span class="asterisk">＊</span>：必須項目</p>
      <%= render "components/error-messages/error-messages", object: review %>
    </div>
  </div>

  <div class="col-md-8 offset-md-2">
    <%= form_with model: [:contract, review], local: true do |form| %>
      <div class="review-form--group form-row col-md-12">
        <div class="form">
          <div class="star" id="star">
        		<%= form.label :rate,'評価 ', class:'label' %>
        		<%= form.hidden_field :rate, id: :review_star %>
        	</div>
        </div>
      </div>

      <div class="review-form--group form-row">
        <div class="form col-md-12">
          <%= form.label :コメント, class:"label" %>
          <%= form.text_area :comment, placeholder: "感謝の気持ちを伝えよう！", class:"form-control input" %>
          <span class="bar"></span>
        </div>
      </div>

      <div class="row submit form">
        <div class="mx-auto">
          <%= form.submit "入力内容を確認する", class:"btn btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
