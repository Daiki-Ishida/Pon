<% if current_user.present? %>
  <% if post.likes?(current_user) %>
    <li>
    <%= link_to product_like_path(post), method: :delete do %>
      <div class="like">
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      </div>
      <%= post.likes.count %> いいね
    <% end %>
    </li>
  <% else %>
    <li>
    <%= link_to product_likes_path(post), method: :post do %>
      <div class="dislike">
        <i class="fa fa-heart" aria-hidden="true" style="color: pink;"></i>
      </div>
      <%= post.likes.count %> いいね
    <% end %>
    </li>
  <% end %>
<% end %>
