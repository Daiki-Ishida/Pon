<div class="home-nav">
  <div class="home-nav--top">
    <%= link_to "フェレット", ferrets_path, class:"home-nav--top-links #{type}" %>
    <%= link_to "ユーザー", users_path, class:"home-nav--top-links #{type}" %>
    <%= link_to "投稿", posts_path, class:"home-nav--top-links #{type}" %>
  </div>
  <div class="home-nav--bottom">
    <div class="home-nav--bottom-links">
      <%= link_to_unless_current "全て", nav_links(type)[:index] %>
    </div>
    <div class="home-nav--bottom-links">
      <%= link_to_unless_current "マイエリア", nav_links(type)[:territory] %>
    </div>
    <div class="home-nav--bottom-links">
      <%= link_to_unless_current "フォロー", nav_links(type)[:follow] %>
    </div>
    <button type="button" name="button" class="home-nav--sort-btn" id="sortBtn">
      <i class="fas fa-sort"></i> 絞り込み
    </button>
    <div class="home-nav--sort-modal" id="modal">
      <%= render "components/sort-menu/sort-menu", type: type, sort: sort %>
    </div>
    <div class="home-nav--search">
      <%= form_with url: nav_links(type)[:search],
                    enforce_utf8: false,
                    method: 'get',
                    class: "home-nav--search-form",
                    local: true do |form| %>
        <%= form.text_field :search, placeholder:"検索", class:"home-nav--search-input" %>
        <%= button_tag type: 'submit', class:'home-nav--search-btn' do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
